{
  "manifest_version": 3,
  "name": "Amadeus GDS Flight Balance Checker",
  "version": "0.1",
  "description": "Checks balance of flights of Amadeus GDS",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
